<?xml version="1.0" encoding="UTF-8"?>
<widget version="0.2">
    <title xml:lang="ko">Gy 트리 메뉴 출력기(5단 트리)</title>
    <description xml:lang="ko">메뉴를 트리 형식으로 출력하는 위젯입니다.</description>
    <version>0.1</version>
    <date>2012-04-06</date>

    <author email_address="ghkdwind@naver.com" link="http://www.gayeon.co.kr">
        <name xml:lang="ko">gayeon</name>
    </author>

    <extra_vars>
        <var id="widget_width">
            <type>text</type>
            <name xml:lang="ko">위젯 너비</name>
            <description xml:lang="ko">위젯 너비를 설정할 수 있습니다.(기본 값: 200)</description>
        </var>
        <var id="widget_height">
            <type>text</type>
            <name xml:lang="ko">위젯 높이</name>
            <description xml:lang="ko">위젯 너비를 설정할 수 있습니다.(기본 값: 400)</description>
        </var>
        <var id="widget_bg_color">
            <type>text</type>
            <name xml:lang="ko">위젯 배경색</name>
            <description xml:lang="ko">위젯의 배경색 설정할 수 있습니다.(기본 값: FFFFFF)</description>
        </var>
        <var id="widget_border_color">
            <type>text</type>
            <name xml:lang="ko">위젯 테두리 색깔</name>
            <description xml:lang="ko">위젯 테두리 색깔을 설정할 수 있습니다.(기본 값: CCCCCC)</description>
        </var>
        <var id="widget_border_type">
            <type>text</type>
            <name xml:lang="ko">위젯 테두리 스타일</name>
            <description xml:lang="ko">위젯 테두리 스타일을 설정할 수 있습니다.(기본 값: solid, 테두리 스타일: solid, outset, dashed, dotted, double, groove, inset, ridge)</description>
        </var>
        <var id="widget_border_size">
            <type>text</type>
            <name xml:lang="ko">위젯 테두리 굵기</name>
            <description xml:lang="ko">위젯 테두리 굵기를 설정할 수 있습니다.(기본 값: 1)</description>
        </var>
        <var id="widget_title_type" type="select">
            <name xml:lang="ko">제목 타입</name>
            <description xml:lang="ko">위젯 제목을 텍스트 또는 이미지로 할 것인지를 설정할 수 있습니다.(기본 값: 텍스트)</description>
            <options>
                <value>text</value>
                <name xml:lang="ko">텍스트</name>
            </options>
            <options>
                <value>image</value>
                <name xml:lang="ko">이미지</name>
            </options>
        </var>
        <var id="widget_title_text">
            <type>text</type>
            <name xml:lang="ko">제목 글자</name>
            <description xml:lang="ko">메뉴 상단에 표시되는 제목 글자를 설정할 수 있습니다.(기본 값: SITE MAP)</description>
        </var>
        <var id="widget_title_image">
            <type>text</type>
            <name xml:lang="ko">제목 이미지 URL</name>
            <description xml:lang="ko">메뉴 상단에 표시되는 제목 이미지를 설정할 수 있습니다.(높이: 30px)</description>
        </var>
        <var id="widget_title_color">
            <type>text</type>
            <name xml:lang="ko">제목 색깔</name>
            <description xml:lang="ko">메뉴 상단에 표시되는 제목 글자색을 설정할 수 있습니다.(기본 값: 000000, 검은색)</description>
        </var>
        <var id="widget_title_bg_color">
            <type>text</type>
            <name xml:lang="ko">제목 영역 배경색</name>
            <description xml:lang="ko">메뉴 상단에 표시되는 제목 영역의 배경색을 설정할 수 있습니다.(기본 값: F1F1F1)</description>
        </var>
        <var id="menu_color">
            <type>text</type>
            <name xml:lang="ko">메뉴 글자색</name>
            <description xml:lang="ko">메뉴 글자색을 설정할 수 있습니다.(기본 값: 333333)</description>
        </var>
        <var id="selected_menu_color">
            <type>text</type>
            <name xml:lang="ko">선택된 메뉴 글자색</name>
            <description xml:lang="ko">선택된 메뉴의 글자색을 설정할 수 있습니다.(기본 값: 000000, 검은색)</description>
        </var>
        <var id="open_all_bg_color">
            <type>text</type>
            <name xml:lang="ko">Open All/Close 기본 배경색</name>
            <description xml:lang="ko">Open All/Close 버튼에 기본 배경색을 설정할 수 있습니다.(기본 값: 333333)</description>
        </var>
        <var id="open_all_text_color">
            <type>text</type>
            <name xml:lang="ko">Open All/Close 기본 글자색</name>
            <description xml:lang="ko">Open All/Close 버튼에 기본 글자색을 설정할 수 있습니다.(기본 값: FFFFFF)</description>
        </var>
        <var id="open_all_hover_bg_color">
            <type>text</type>
            <name xml:lang="ko">Open All/Close 마우스오버시 배경색</name>
            <description xml:lang="ko">Open All/Close 버튼에 마우스오버시 배경색을 설정할 수 있습니다.(기본 값: 666666)</description>
        </var>
        <var id="open_all_hover_text_color">
            <type>text</type>
            <name xml:lang="ko">Open All/Close 마우스오버시 글자색</name>
            <description xml:lang="ko">Open All/Close 버튼에 마우스오버시 글자색을 설정할 수 있습니다.(기본 값: FFFFFF)</description>
        </var>
        <var id="display_menu_type" type="select">
            <name xml:lang="ko">메뉴 출력 방식</name>
            <description xml:lang="ko">모든 메뉴 그룹을 항상 출력되도록 설정할 수 있습니다.(기본 값: 선택된 메뉴 그룹)</description>
            <options>
                <value>sg</value>
                <name xml:lang="ko">선택된 메뉴 그룹</name>
            </options>
            <options>
                <value>ag</value>
                <name xml:lang="ko">모든 메뉴 그룹</name>
            </options>
        </var>
    </extra_vars>
</widget>